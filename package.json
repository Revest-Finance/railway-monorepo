{
    "name": "typescript-template",
    "version": "1.0.4",
    "description": "Resonate API and CRON jobs",
    "keywords": [
        "typescript",
        "resonate",
        "backend",
        "api",
        "railway"
    ],
    "author": {
        "name": "Revest Finance",
        "url": "https://revest.finance"
    },
    "license": "BSD-3-Clause",
    "repository": {
        "type": "git",
        "url": "https://github.com/Revest-Finance/railway-monorepo"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "scripts": {
        "build": "tsc",
        "clean": "if exist /dist rmdir /s /dist",
        "clean:all": "npm run clean && (rm -r ./node_modules || true)",
        "dev": "ts-node-dev -r tsconfig-paths/register --poll src/api.ts",
        "start:api": "npm run build && node -r dotenv/config ./dist/api.js"
    },
    "devDependencies": {
        "@types/chai": "^4.1.6",
        "@types/express": "^4.17.17",
        "@types/lodash": "^4.14.194",
        "@types/mocha": "^9.0.0",
        "@types/mongoose": "5.11.97",
        "@types/node": "^18.7.18",
        "@types/node-cron": "^3.0.7",
        "@types/pg": "^8.6.6",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "chai": "^4.1.2",
        "conventional-changelog-cli": "^2.0.12",
        "coveralls": "^3.0.3",
        "cz-conventional-changelog": "^3.0.2",
        "eslint": "^8.2.0",
        "mocha": "^10.0.0",
        "nyc": "^15.0.0",
        "source-map-support": "^0.5.12",
        "ts-node": "10.0.0",
        "ts-node-dev": "2.0.0",
        "tsconfig-paths": "4.2.0",
        "typescript": "^4.0.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "axios": "1.3.2",
        "dotenv": "16.0.3",
        "ethers": "6.13.2",
        "ethers-multicall-provider": "6.4.0",
        "express": "4.18.2",
        "mongoose": "8.5.2",
        "node-cron": "3.0.2",
        "pg": "8.9.0",
        "sitka": "1.0.5"
    }
}
